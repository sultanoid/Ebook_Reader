<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="#FFFFFF">
    
    <RelativeLayout
    android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_weight="0.0"
    android:background="@drawable/wood_bck">
    
    	<ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" 
        android:src="@drawable/home_icon" 
        android:id="@+id/home_icon_for_library_tab">
        </ImageView>
        
        <TextView 
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:layout_alignParentTop="true" 
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:text="Library"
        android:textColor="#FFFFFF"
        android:textSize="30dip">
        </TextView>
        
        <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" 
        android:layout_alignParentRight="true" 
        android:src="@drawable/store" 
        android:id="@+id/web_icon_for_library">
        </ImageView>
    
    </RelativeLayout>
    
    <RelativeLayout
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.0">
    	
    	<ImageView
    	android:layout_width="wrap_content"
    	android:id="@+id/desc_tab_selected_tab_view"
    	android:layout_height="wrap_content"
    	android:layout_alignParentLeft="true"
    	android:src="@drawable/book_icon_for_book_tab"
    	android:paddingTop="5dip">
    	</ImageView>
    	
    	<TextView
    	android:layout_height="wrap_content"
    	android:id="@+id/textView_for_tab_View"
    	android:layout_alignParentTop="true"
    	android:layout_width="wrap_content"
    	android:layout_toRightOf="@+id/desc_tab_selected_tab_view"
    	android:text="Books"
    	android:textColor="#000000"
    	android:paddingTop="10dip"
    	android:textSize="15dip"
    	android:paddingLeft="5dip">
    	</TextView>
    	
    	
        
    </RelativeLayout>
    <TabHost 
	android:layout_weight="1.0"
	android:id="@android:id/tabhost"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
		<LinearLayout
		android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:padding="5dp">
	        
	     <TabWidget
	     android:id="@android:id/tabs"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content" />
	     
	     <FrameLayout
	     android:id="@android:id/tabcontent"
	     android:layout_width="fill_parent"
	     android:layout_height="fill_parent"
	     android:padding="5dp" />
	    </LinearLayout>
	</TabHost>
	
      <ImageView
      android:id="@+id/imageView3"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:scaleType="fitEnd"
      android:background="@drawable/wood_bck"
      android:layout_weight="0.0">
      </ImageView>  
</LinearLayout>