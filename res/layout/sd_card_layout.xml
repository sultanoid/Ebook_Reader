<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="#FFFFFF">
    
    <RelativeLayout
    android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_weight="0.0"
    android:background="@drawable/wood_bck">
    
    	<ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/home_icon_for_SD_Card"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" 
        android:src="@drawable/home_icon">
        </ImageView>
        
        <TextView 
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:layout_alignParentTop="true" 
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:text="SD CARD"
        android:textColor="#FFFFFF"
        android:textSize="30dip">
        </TextView>
        
        <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" 
        android:id="@+id/store_icon_for_SD_Card"
        android:layout_alignParentRight="true" 
        android:src="@drawable/store">
        </ImageView>
    
    </RelativeLayout>
    
    <RelativeLayout
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.0">
    	
    	<ImageView
    	android:layout_width="wrap_content"
    	android:id="@+id/sd_card_image_view"
    	android:layout_height="wrap_content"
    	android:layout_alignParentLeft="true"
    	android:src="@drawable/small_sd_card"
    	android:paddingTop="5dip">
    	</ImageView>
    	
    	<TextView
    	android:layout_height="wrap_content"
    	android:id="@+id/textView2"
    	android:layout_alignParentTop="true"
    	android:layout_width="wrap_content"
    	android:layout_toRightOf="@+id/sd_card_image_view"
    	android:text="SD CARD"
    	android:textColor="#000000"
    	android:paddingTop="10dip"
    	android:textSize="15dip"
    	android:paddingLeft="5dip">
    	</TextView>
    	
    	<Button
    	android:layout_height="wrap_content"
    	android:id="@+id/btn_for_sd_card_previous_page"
    	android:layout_alignParentRight="true"
    	android:layout_width="wrap_content"
    	android:background="@drawable/btn_previous_screen_sd">
    	</Button>
        
    </RelativeLayout>
    
      <ListView
      android:id="@+id/listView_sd_card"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:layout_weight="1.0">
      </ListView>
      
      <ImageView
      android:id="@+id/imageView3"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:scaleType="fitEnd"
      android:background="@drawable/wood_bck"
      android:layout_weight="0.0">
      </ImageView>  
</LinearLayout>